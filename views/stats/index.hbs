<div>
    <h1 class="no-margin bottom-margin">Stats</h1>
</div>
{{!-- {{stats}} --}}
{{!-- {{characterId}}
{{!-- {{profileId}} --}}
<div class="pure-menu pure-menu-horizontal centerImg">
    <ul class="pure-menu-list">
        <li class="pure-menu-item pure-menu-selected"><a href="/{{profileId}}/characters/{{characterId}}" class="pure-menu-link">Previous</a></li>
        <li class="pure-menu-item pure-menu-selected"><a href="/{{profileId}}/characters/{{characterId}}/stats/new"
                class="pure-menu-link">New Stat</a></li>
    </ul>
</div>
<div>
    {{#each stats}}
    <table class="pure-table">
        <thead>
            <tr>
                <th>Tournament Name</th>
                <th>Wins</th>
                <th>Losses</th>
                <th>Total Matches</th>
                <th>Victory Percentage</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{tournamentName}}</td>
                <td>{{wins}}</td>
                <td>{{losses}}</td>
                <td>{{matches}}</td>
                <td>{{victoryPercentage}}</td>
            </tr>
        </tbody>
    </table>
    <button class="pure-button pure-button-primary"><a href="/{{../profileId}}/characters/{{../characterId}}/stats/{{_id}}">VIEW</a></button>
    {{/each}}
</div>